<%= form_for @lost, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :item_number, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :item_number, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :bib_number, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :bib_number, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :title, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :title, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :imprint, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :imprint, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :isbn, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :isbn, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :status, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :status, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :checkouts, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :checkouts, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :location, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :location, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :note, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :note, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :call_number, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :call_number, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :volume, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :volume, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :barcode, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :barcode, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :due_date, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :due_date, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :last_checkout, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :last_checkout, :class => 'text_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                losts_path, :class => 'btn' %>
  </div>
<% end %>
