<!DOCTYPE html PUBLIC "-//W3C//DTD HTML 4.01//EN">
<html>
<%= render 'layouts/header' %>
<body>
<div class="container-fluid">
  <h2>DDA Expenditures</h2>

  <%= image_tag Gchart.pie(:data => @dda_sum.values, :labels => @dda_sum.keys) %>
  <div class="btn-group">
    <%= link_to 'Current month', dda_expenditures_path(current_month: true), class: 'btn btn-default'%> 
    <%= link_to 'Fiscal year', dda_expenditures_path, class: 'btn btn-default'%> 
  </div>
    <div class="row">
<table class="table table-striped table-condensed table-responsive">
  <thead>
    <tr>
      <th>Fund</th>
      <th>Amount</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @dda_sum.each do |key, value| %>
      <tr>
        <td><%= key %></td>
        <td><%= number_to_currency(value, unit: '$') %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
</div>

